# Example .env file

# Database Configuration
DB_PATH=data/workout_tracker.db
DB_POOL_SIZE=5
DB_TIMEOUT=5.0
DB_ECHO_SQL=false

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=1
API_TITLE='Workout Tracker'
API_DESCRIPTION='A simple workout tracker app'
API_VERSION=0.1.0
API_DOCS_URL=/docs# Set to null to disable docs
API_OPENAPI_URL=/openapi.json

# Application Settings
APP_LOG_LEVEL=INFO
APP_CORS_ORIGINS=*
APP_ENABLE_METRICS=false

# UI/Frontend Configuration
WORKOUT_API_BASE_URL=http://localhost:8000
WORKOUT_TRACE_ID=ui-streamlit

# AI Coach Configuration
ANTHROPIC_API_KEY=your-api-key-here
AI_MODEL=anthropic:claude-3-5-haiku-latest
AI_TEMPERATURE=0.5

# Redis Configuration (for AI Coach caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
